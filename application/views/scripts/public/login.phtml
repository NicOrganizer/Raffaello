        $("#login").validate({
            rules: {
                username: {
                    required: true,
                    minlength: 3
                },
                password: {
                    required: true,
                    minlength: 4
                }
            },
            messages: {
                username: {
                    required: "Il campo username non può essere vuoto.",
                    minlength: "L'username deve essere almeno di 3 caratteri."
                },
                password: {
                    required: "Il campo password non può essere vuoto.",
                    minlength: "La password deve avere almeno 4 caratteri."
                }
            }
        });
    });

</script>